<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewData"
            type="com.cody.component.handler.data.FriendlyViewData" />
    </data>

    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/uiColorPrimaryBackground"
        android:gravity="center"
        android:onClick="@{onClickListener::onClick}"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@{viewData.imageWidth, default=@dimen/dimen_hugest}"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_normal"
            android:onClick="@{onClickListener::onClick}">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintDimensionRatio="h,129:100"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent"
                bind:srcCompat="@drawable/ic_load_failed" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_normal"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="5"
            android:text="@string/ui_str_no_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_normal"
            android:gravity="center"
            android:text="@string/ui_str_load_failed_click_to_reload" />

    </LinearLayout>


</layout>