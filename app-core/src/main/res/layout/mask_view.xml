<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewData"
            type="com.cody.component.handler.data.MaskViewData" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{viewData.visibility?View.VISIBLE:View.GONE}">

        <LinearLayout
            android:id="@+id/friendlyRetry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/uiColorPrimaryBackground"
            android:gravity="center"
            android:onClick="@{onClickListener::onClick}"
            android:orientation="vertical"
            android:visibility="@{viewData.loading?View.GONE:View.VISIBLE}">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@{viewData.imageId}"
                tools:src="@drawable/ic_load_failed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_normal"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="5"
                android:text="@{viewData.message}"
                tools:text="@string/ui_str_bad_network_view_tip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_normal"
                android:gravity="center"
                android:text="@string/ui_str_load_failed_click_to_reload" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loadingMaskView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/uiColorPrimaryBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewData.loading?View.VISIBLE:View.GONE}">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@null"
                bind:gifSrc="@{viewData.loadingResId}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/ui_str_loading" />

        </LinearLayout>
    </FrameLayout>


</layout>