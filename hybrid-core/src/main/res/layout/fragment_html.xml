<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: -->
        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewData"
            type="com.cody.component.hybrid.data.HtmlViewData" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HtmlActivity">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/loadingMaskView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewData.loading?View.VISIBLE:View.GONE}">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@null"
                bind:gifSrc="@{viewData.loadingResId}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/ui_str_loading" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/errorMaskView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/uiColorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewData.error?View.VISIBLE:View.GONE}"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_load_failed"
                android:drawablePadding="@dimen/dimen_normal"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@{viewData.message}"
                tools:text="@string/ui_str_bad_network_view_tip" />

            <Button
                android:id="@+id/refresh"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_bigger"
                android:onClick="@{onClickListener::onClick}"
                android:text="@string/ui_str_refresh" />

            <Button
                android:id="@+id/ignore"
                style="?android:attr/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_bigger"
                android:onClick="@{onClickListener::onClick}"
                android:text="@string/ui_str_ignore"
                android:visibility="@{viewData.debug?View.VISIBLE:View.GONE}"
                tools:visibility="visible" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_super_tiny"
            android:layout_alignParentTop="true"
            android:max="@{viewData.MAX_PROGRESS}"
            android:progress="@{viewData.progress}"
            android:progressDrawable="@drawable/ic_html_progress"
            android:visibility="@{viewData.loading?View.VISIBLE:View.GONE}" />

    </RelativeLayout>

</layout>