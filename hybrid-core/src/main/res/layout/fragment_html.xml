<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: -->
        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewData"
            type="com.cody.component.hybrid.data.HtmlViewData" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HtmlActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:onClick="@{onClickListener::onClick}"
            android:visibility="@{viewData.showHeader?View.VISIBLE:View.GONE}"
            bind:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            bind:title="@{viewData.header}"
            tools:visibility="visible" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar" />

        <LinearLayout
            android:id="@+id/loadingMaskView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:background="#60000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewData.loading?View.VISIBLE:View.GONE}">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@null"
                bind:gifSrc="@{viewData.loadingResId}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/html_loading" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/errorMaskView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@id/toolbar"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewData.error?View.VISIBLE:View.GONE}"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_load_failed"
                android:drawablePadding="@dimen/padding"
                android:text="@{viewData.message}"
                tools:text="@string/bad_network_view_tip" />

            <Button
                android:id="@+id/refresh"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="@{onClickListener::onClick}"
                android:text="@string/refresh" />

            <Button
                android:id="@+id/ignore"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="@{onClickListener::onClick}"
                android:text="@string/ignore"
                android:visibility="@{viewData.debug?View.VISIBLE:View.GONE}"
                tools:visibility="visible" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/toolbar"
            android:max="@{viewData.MAX_PROGRESS}"
            android:progress="@{viewData.progress}"
            android:progressDrawable="@drawable/ic_html_progress"
            android:visibility="@{viewData.loading?View.VISIBLE:View.GONE}" />

    </RelativeLayout>

</layout>